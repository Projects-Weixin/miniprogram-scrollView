/* component/scrollView/scrollView.wxss */

.scroll {
  width: 100%;
  height: 100%;
}

.scroll-msgModule {
  font-size: 14px;
  color: #7e8a9b;
  text-align: center;
  overflow: hidden;
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll-refreshModule-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll-msgModule-icon {
  width: 20px;
  height: 20px;
}

.scroll-loadmoreModule {
  height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll-msgModule-icon-loading {
  animation: loading 1s linear infinite;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }

  25% {
    transform: rotate(90deg);
  }

  50% {
    transform: rotate(180deg);
  }

  75% {
    transform: rotate(270deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
